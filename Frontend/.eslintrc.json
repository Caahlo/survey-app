// ck
{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "airbnb-typescript/base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-param-reassign": 0,
        "linebreak-style": "off",
        "max-classes-per-file": "off",
        "import/prefer-default-export": "off"
    },
    "ignorePatterns": [
        "src/__test__/*",
        "dist/*", 
        "node_modules/*"
    ]
}
